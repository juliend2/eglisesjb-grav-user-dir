# Top-level EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Twig templates
[*.twig]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

